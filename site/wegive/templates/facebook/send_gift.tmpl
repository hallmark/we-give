<fb:dashboard>
    <fb:help href="http://apps.facebook.com/test-we-give/help">Help Me!</fb:help>
</fb:dashboard>

<fb:tabs>
    <fb:tab-item href="index" title="Send a Gift" selected="true" />
    <fb:tab-item href="received" title="Received" />
    <fb:tab-item href="sent" title="Sent" />
    <fb:tab-item href="mission" title="Our Mission" />
</fb:tabs>

<div id="gift_store">
%if c.error_msg:
    <fb:error message="There was an error with your request">
        <p>
            ${c.error_msg}
        <p>
        <p>
            Please go back and try again.
        </p>
    </fb:error>
%else:
    <div id="gift_box">
        <div id="gift_display">
            %if c.recipient_id:
                To: <fb:profile-pic uid="${c.recipient_id}" size="q" />
            %endif
            Gift info
        </div>
    </div>
    <div class="gift_store_row">
        Your donation of $${c.donation_amt} to ${c.charity_name} will be processed through Amazon Payments.
    </div>
    <div class="gift_store_row">
        <%doc><form id="continue_to_amz" name="continue_to_amz" action="${c.fps_url}" method="post" onsubmit="blipForm(this);">
##            <input type="hidden" name="donation_id" value="${c.donation_id}" />
            <input type="hidden" name="awsSignature" value="${c.aws_sig}" />
            <input type="hidden" name="callerKey" value="${c.aws_key}" />
            <input type="hidden" name="callerReference" value="${c.fps_caller_ref}" />
            <input type="hidden" name="paymentReason" value="${c.fps_pymt_reason}" />
            <input type="hidden" name="transactionAmount" value="${c.fps_trans_amt}" />
            <input type="hidden" name="pipelineName" value="${c.fps_pipeline_name}" />
            <input type="hidden" name="returnURL" value="${c.fps_return_url}" />
##            <input type="hidden" name="version" value="${c.fps_version}" />
            <input type="submit" value="Continue with donation" class="inputsubmit" onclick="alert('foo');" />
            <a href="index">Cancel</a>
        </form>
        <br></%doc>
        <a href="${c.direct_url}" class="inputbutton anchor_button">Continue with donation</a> <a href="index">Cancel</a>
##        <div id="testdiv">Test text</div>
    </div>
%endif
</div>

