</script>

<form id="gift_form" name="gift_form" action="send_gift" method="post" onsubmit="return checkForm(this);">

<input type="hidden" name="uuid" value="${c.uuid}" />
<input type="hidden" name="gift_id" id="gift_id" value="" />

<%
    if not c.is_app_user:
        disable_non_users = ' disabled="disabled"'
    else:
        disable_non_users = ''
%>

<div class="page_row">
    <h3>Select the charity:</h3>
        <select name="charity_val" id="gift_charity"${disable_non_users}>
    % for charity in c.charities:
            <option value="${charity.id}">${charity.name}</option>
    % endfor
        </select>
</div>

<div class="page_row">
    <h3>Choose your recipient:</h3>
    <fb:friend-selector />
</div>

<div class="gift_preview" id="preview_box">
    <div class="preview_img_cnt">
        <img src="http://images.wegivetofriends.org/web/blank.gif" id="preview_img">
    </div>
    <div class="preview_name_cnt">
        <span id="preview_name"></span>
    </div>
</div>

<div class="page_row">
    <h3>Add your message:</h3>
    <textarea id="gift_message" name="message" rows="4" cols="40" class="placeholder" onfocus="if(this.getValue()=='Your message here...'){this.setValue('');this.removeClassName('placeholder');}" onblur="if(this.getValue()==''){this.setValue('Your message here...');this.addClassName('placeholder');}"${disable_non_users}>Your message here...</textarea>
</div>

<div class="page_row">
    <h3>Set the amount of your donation:</h3>
    $ <input id="gift_amount" type="text" name="amount" class="inputtext" value="1.00" autocomplete="off"${disable_non_users} /> USD
</div>

<%doc>
<div class="page_row">
    <h3>Delivery method:</h3>
    <div id="privacy_controls">
        <div class="privacy_control">
            <input type="radio" id="deliver_public" name="privacy" value="public" checked="checked"/>
            <div class="privacy_text">
                <label for="deliver_public">Public</label><br/>
                People will see your gift and message.
            </div>
        </div>
        <div class="privacy_control">
            <input type="radio" id="deliver_private" name="privacy" value="private"/>
            <div class="privacy_text">
                <label for="deliver_private">Private</label><br/>
                People will see the gift but only the recipient will see your name and message.
            </div>
        </div>
    </div>
</div>
</%doc>

<div class="page_row">
    <input type="submit" value="Continue" class="inputsubmit"${disable_non_users} />
</div>

%if c.show_prompt_perm:
<div class="page_row">
    <fb:prompt-permission perms="publish_stream">Would you like our application to post to your News Feed?</fb:prompt-permission>
</div>
%endif

</form>


